<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WeatherWeatherApiKey</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angular")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("My Weather Api", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Search", "Index", "Search")</li>
                <li>@Html.ActionLink("Forecast", "Index", "Forecast")</li>
                <li>@Html.ActionLink("Cache", "Index", "Cache")</li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">Api Key : ########<!--@Global.WeatherApiKey--></a></li>
            </ul>
        </div>

    </div>
</div>
<div class="container body-content" ng-app="WeatherApp">
    <script>
        var myApp = angular.module("WeatherApp", ['ui.bootstrap', 'ngSanitize']);
    </script>
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My Weather Api</p>
    </footer>

</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
